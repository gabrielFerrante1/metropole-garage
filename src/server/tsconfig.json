{
    "compilerOptions": {
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "types": [
            "@citizenfx/server",
            "@types/node"
        ],
        "lib": [
            "ES6"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../../src/*"
            ]
        }
    },
    "include": [
        "../../src/**/*"
    ],
    "exclude": [
        "**/node_modules",
        "**/__tests__/*"
    ]
}